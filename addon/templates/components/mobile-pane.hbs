{{yield (hash
  activeIndex=activeIndex
  simple-indicator=(component 'mobile-pane/simple-indicator'
    navItems=navItems
    currentOffset=currentOffset
    onClick=(action 'changePane')
  )
  previous=(component 'mobile-pane/pervious'
    paneCount=paneCount
    activeIndex=activeIndex
    onClick=(action 'onPrevious')
  )
  next=(component 'mobile-pane/next'
    paneCount=paneCount
    activeIndex=activeIndex
    onClick=(action 'onNext')
  )
  scroller=(component 'mobile-pane/scroller'
    activeIndex=activeIndex
    lazyRendering=_lazyRendering
    keepRendered=keepRendered
    transitionDuration=transitionDuration
    triggerVelocity=triggerVelocity

    activePane=activePane
    paneContainerElement=paneContainerElement
    paneCount=paneCount
    currentOffset=currentOffset
    visiblePanes=visiblePanes

    onDragStart=(action 'onDragStart')
    onDragMove=(action 'onDragMove')
    onDragEnd=(action 'onDragEnd')
  )
)}}
